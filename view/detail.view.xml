<core:View height="100%" 
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:form="sap.ui.layout.form" 
    xmlns="sap.m" controllerName="ffbl.training.view.detail">
    <Page title="Student's Detail">
        <content>
            <ObjectHeader title="{selectedItem>/Name}" number="{selectedItem>/Price}">
                <statuses>
                    <ObjectStatus text="{selectedItem>/Status}" state="{ path: 'selectedItem>/Status', formatter: 'ffbl.training.utils.Formatter.status' }" />
                </statuses>
                <attributes>
                    <ObjectAttribute text="{selectedItem>/WeightMeasure}" />
                    <ObjectAttribute text="{selectedItem>/Width}" />

                </attributes>
            </ObjectHeader>
            <IconTabBar id="idIconTabBarMulti" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter icon="sap-icon://hint">
                        <form:SimpleForm id   = "formLayoutId" title="Information">
                            <form:content>

                                <Label text = "Student ID" />
                                <Text  text = "{detailData>/Details/StudentID}" />
                                <Label text = "Name" />
                                <Text  text = "{detailData>/Details/Name}" />
                                <Label text = "Parent Email" />
                                <Text  text = "{detailData>/Details/Email}" />
                                <Label text = "Parent Phone Number" />
                                <Text  text = "{detailData>/Details/Cell}" />
                                <Label text = "Address" />
                                <Text  text = "{detailData>/Details/Address}" />
                                <Label text = "Gender" />
                                <Text  text = "{detailData>/Details/Gender}" />
                            </form:content>
                        </form:SimpleForm>
                    </IconTabFilter>

                    <IconTabFilter icon="sap-icon://lead">
                        <form:SimpleForm id   = "formLayoutIdFinance" title="Dues">
                            <form:content>
                                <Label text = "Registration Fees" />
                                <Text  text = "{detailData>/Finance/Annual}" />
                                <Label text = "Tution Fees" />
                                <Text  text = "{detailData>/Finance/RegistrationFee}" />
                                <Label text = "Exam Fees" />
                                <Text  text = "{detailData>/Finance/ExamFee}" /> 
                                <Button text="Challan Form" type="{= ${selectedItem>/Status} === 'Inactive' ? 'Accept' : 'Reject' }" />
                            </form:content>
                        </form:SimpleForm>
                    </IconTabFilter>

                    <IconTabFilter icon="sap-icon://work-history">

                        <Table id="itemTable" items="{detailData>/History}" headerText="Educational History">
                            <columns>
                                <Column hAlign="Left" demandPopin="true" minScreenWidth="Medium">
                                    <header>
                                        <Label text="Grade" width="100%"/>
                                    </header>
                                </Column>
                                <Column hAlign="Left">
                                    <header>
                                        <Label text="Previous School Name (If Any)" width="100%"/>
                                    </header>
                                </Column>
                                <Column hAlign="Left" demandPopin="true" minScreenWidth="Medium">
                                    <header>
                                        <Label text="Attempts" width="100%"/>
                                    </header>
                                </Column>
                                <Column hAlign="Left" demandPopin="true" minScreenWidth="Medium">
                                    <header>
                                        <Label text="Transcript" width="100%"/>
                                    </header>
                                </Column>
                            </columns>
                            <ColumnListItem>
                                <cells>
                                    <Text text = "{detailData>CompnayCode}"/>
                                    <ObjectIdentifier title="{detailData>Companyname}"/>

                                    <Text text = "{detailData>Position}"/>
                                     <Button text="Transcript" type="Accept" />
                                </cells>
                            </ColumnListItem>
                        </Table>


                    </IconTabFilter>

                    <IconTabFilter icon="sap-icon://group">
                        <Text text="corresponds content goes here ..." />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                
            </Toolbar>
        </footer>
    </Page>
</core:View>