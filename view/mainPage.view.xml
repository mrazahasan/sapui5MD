<mvc:View height="100%" 
  xmlns:l="sap.ui.layout" 
  xmlns:f="sap.ui.layout.form" 
  xmlns:core="sap.ui.core" 
  xmlns:mvc="sap.ui.core.mvc" controllerName="ffbl.training.view.mainPage" 
  xmlns="sap.m">
  <Page title="Students">
    <content>
        <List 
         mode="SingleSelectMaster" itemPress="onPressList"
         items="{ path: 'listData>/ProductCollection' }"> 
          <items>
            <ObjectListItem title="{listData>Name}" type="Active" 
             number="{listData>Price}">
              <firstStatus>
                <ObjectStatus text="{listData>Status}" 
                state="{ path: 'listData>Status', formatter: 'ffbl.training.utils.Formatter.status' }" />
              </firstStatus>
              <attributes>
                <ObjectAttribute text="{listData>WeightMeasure}" />
                <ObjectAttribute text="{listData>Width}" />
              </attributes>
            </ObjectListItem>
          </items>
        </List>
    </content>
    <footer>
      <Toolbar>
      </Toolbar>
    </footer>
  </Page>
</mvc:View>